/*place global styles here */

/* custom theme */

@font-face {
    font-family: 'Lato';
    src: url('/fonts/Lato-Regular.ttf');
    font-weight: 400;
    font-style: normal;
}

@font-face {
    font-family: 'Lato';
    src: url('/fonts/Lato-Bold.ttf');
    font-weight: 700;
    font-style: normal;
}

@font-face {
    font-family: 'Lato';
    src: url('/fonts/Lato-Italic.ttf');
    font-weight: 400;
    font-style: italic;
}

@font-face {
    font-family: 'Lato';
    src: url('/fonts/Lato-Black.ttf');
    font-weight: 800;
    font-style: normal;
}

:root {
	/* =~= Theme Properties =~= */
	--theme-font-family-base: 'Lato', sans-serif;
	--theme-font-family-heading: 'Lato', sans-serif;
	--theme-font-color-base: 0 0 0;
	--theme-font-color-dark: 255 255 255;
	--theme-rounded-base: 0px;
	--theme-rounded-container: 0px;
	--theme-border-base: 0px;
	/* =~= Theme On-X Colors =~= */
	--on-primary: 255 255 255;
	--on-secondary: 255 255 255;
	--on-tertiary: 0 0 0;
	--on-success: 255 255 255;
	--on-warning: 0 0 0;
	--on-error: 255 255 255;
	--on-surface: 0 0 0;
	/* =~= Theme Colors  =~= */
	/* primary | #000000 */
	--color-primary-50: 217 217 217; /* ⬅ #d9d9d9 */
	--color-primary-100: 204 204 204; /* ⬅ #cccccc */
	--color-primary-200: 191 191 191; /* ⬅ #bfbfbf */
	--color-primary-300: 153 153 153; /* ⬅ #999999 */
	--color-primary-400: 77 77 77; /* ⬅ #4d4d4d */
	--color-primary-500: 0 0 0; /* ⬅ #000000 */
	--color-primary-600: 0 0 0; /* ⬅ #000000 */
	--color-primary-700: 0 0 0; /* ⬅ #000000 */
	--color-primary-800: 0 0 0; /* ⬅ #000000 */
	--color-primary-900: 0 0 0; /* ⬅ #000000 */
	/* secondary | #54414E */
	--color-secondary-50: 229 227 228; /* ⬅ #e5e3e4 */
	--color-secondary-100: 221 217 220; /* ⬅ #ddd9dc */
	--color-secondary-200: 212 208 211; /* ⬅ #d4d0d3 */
	--color-secondary-300: 187 179 184; /* ⬅ #bbb3b8 */
	--color-secondary-400: 135 122 131; /* ⬅ #877a83 */
	--color-secondary-500: 84 65 78; /* ⬅ #54414E */
	--color-secondary-600: 76 59 70; /* ⬅ #4c3b46 */
	--color-secondary-700: 63 49 59; /* ⬅ #3f313b */
	--color-secondary-800: 50 39 47; /* ⬅ #32272f */
	--color-secondary-900: 41 32 38; /* ⬅ #292026 */
	/* tertiary | #f2f2f2 */
	--color-tertiary-50: 253 253 253; /* ⬅ #fdfdfd */
	--color-tertiary-100: 252 252 252; /* ⬅ #fcfcfc */
	--color-tertiary-200: 252 252 252; /* ⬅ #fcfcfc */
	--color-tertiary-300: 250 250 250; /* ⬅ #fafafa */
	--color-tertiary-400: 246 246 246; /* ⬅ #f6f6f6 */
	--color-tertiary-500: 242 242 242; /* ⬅ #f2f2f2 */
	--color-tertiary-600: 218 218 218; /* ⬅ #dadada */
	--color-tertiary-700: 182 182 182; /* ⬅ #b6b6b6 */
	--color-tertiary-800: 145 145 145; /* ⬅ #919191 */
	--color-tertiary-900: 119 119 119; /* ⬅ #777777 */
	/* success | #537A5A */
	--color-success-50: 229 235 230; /* ⬅ #e5ebe6 */
	--color-success-100: 221 228 222; /* ⬅ #dde4de */
	--color-success-200: 212 222 214; /* ⬅ #d4ded6 */
	--color-success-300: 186 202 189; /* ⬅ #bacabd */
	--color-success-400: 135 162 140; /* ⬅ #87a28c */
	--color-success-500: 83 122 90; /* ⬅ #537A5A */
	--color-success-600: 75 110 81; /* ⬅ #4b6e51 */
	--color-success-700: 62 92 68; /* ⬅ #3e5c44 */
