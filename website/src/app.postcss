}
html,
body {
	@apply h-full;
    @apply bg-surface-500
}

.gradient-soft-opacity {
    mask-image: linear-gradient(90deg, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0.85) 10%, transparent); 
    -webkit-mask-image: linear-gradient(90deg, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0.85) 10%, transparent); 
}
